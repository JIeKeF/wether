}
.timeTen{
   width: 100%;
  height:200rpx;
  background: #fff;
  margin-top: 20rpx;
}
.scrollIMage{
  width: 100%;
  height: 50rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx
}
.scrollIMage image{
  width: 100%;
